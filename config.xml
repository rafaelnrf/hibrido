<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "br.nrfinformaticasolucoes"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>NRF</name>

    <description>
        Descomplicando o Desenvolvimento de Software	
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Rafael Nonato Ribeiro Ferreira
    </author>

<gap:platform name="ios" />
<gap:platform name="android" />
<gap:platform name="winphone" />
<icon src="cbf.png"   gap:platform="ios" width="57" height="57"/>
<icon src="cbf.png"   gap:platform="ios" width="72" height="72"/>
<icon src="cbf.png"   gap:platform="ios" width="120" height="120"/>
<icon src="cbf.png"   gap:platform="ios" width="152" height="152"/>
<icon src="cbf.png"   gap:platform="ios" width="76" height="76"/>
<!-- Android -->
<gap:splash src="splash.png" />
<gap:splash src="splash.png" gap:platform="android" gap:qualifier="ldpi" />
<gap:splash src="splash.png" gap:platform="android" gap:qualifier="mdpi" />
<gap:splash src="splash.png" gap:platform="android" gap:qualifier="hdpi" />



<plugin name="cordova-plugin-battery-status" source="npm" spec="~1.1.1" />
<plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />    
<plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
<plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
<feature name="Camera">
  <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
</feature>     

<platform name="android">
        <splash density="land-ldpi" src="img/screen/android/drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="img/screen/android/drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="img/screen/android/drawable-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="img/screen/android/drawable-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="img/screen/android/drawable-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="img/screen/android/drawable-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="img/screen/android/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="img/screen/android/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="img/screen/android/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="img/screen/android/drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="img/screen/android/drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="img/screen/android/drawable-port-xxxhdpi-screen.png" />
    </platform>
    

<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>