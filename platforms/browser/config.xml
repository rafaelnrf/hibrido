<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.nrfinformaticasolucoes.nrf2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>NRF 2</name>
    <description>
        Desenvolvimento de Software.
    </description>
    <author email="rafael@nrfinformaticasolucoes.com.br" href="http://www.nrfinformaticasolucoes.com.br">
        Rafael Nonato Ribeiro Ferreira
    </author>
    <content src="index.html" />
    <icon src="www/img/akatsu.png" />
    <splash src="www/img/splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
</widget>
